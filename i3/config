# === === === === Startup === === === === #
exec_always --no-startup-id $HOME/.fehbg
exec_always --no-startup-id compton &
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id setxkbmap -layout us,rs,rs -variant ,latin, -option grp:alt_shift_toggle -option caps:escape

focus_follows_mouse no

# === === === === i3 keybinding === === === === #
set $mod Mod4
floating_modifier $mod
# --- --- --- start terminal
bindsym $mod+Return exec --no-startup-id kitty
# --- --- --- close current window
bindsym $mod+Shift+q kill
# --- --- --- reload the configuration file
bindsym $mod+Shift+c reload
# --- --- --- restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# --- --- --- exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
# --- --- --- screenshot
bindsym Print exec  scrot 'screenshot%d-%m-%Y--%H:%M:%S.png' -e 'mv $f ~/pics/screenshots/'
# --- --- --- screenshot focused window
bindsym $mod+Print exec scrot -u 'screenshot%d-%m-%Y--%H:%M:%S.png' -e 'mv $f ~/pics/screenshots/'
# --- --- --- brightnes controlls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20
# --- --- --- sound controlls
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master,0 500+ unmute"
bindsym $mod+u exec "amixer -q sset Master,0 1000+ unmute"
bindsym XF86AudioLowerVolume exec "amixer -q sset Master,0 500- unmute"
bindsym $mod+Shift+u exec "amixer -q sset Master,0 1000- unmute"
bindsym XF86AudioMute exec "amixer -q sset Master,0 toggle"
# --- --- --- split 
bindsym $mod+c split h
bindsym $mod+v split v 
# --- --- --- enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# --- --- --- change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# --- --- --- toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# --- --- ---change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
# --- --- ---focus the parent container
bindsym $mod+a focus parent
# --- --- --- D MENU
bindsym $mod+d exec dmenu_run -fn Iosevka -p "Launch:"

# === === === === i3 looks === === === ===#
gaps inner 25
font pango:Iosevka Regular 9 
default_border none
set $bluebg "#070a2e"
set $greybg "#151a4a"
set $light "#0d1036"
set $text ""
title_align center

client.unfocused $bluebg $bluebg #8c8c8c #2e9ef4 $bluebg
client.focused			$greybg $greybg #ffffff #ff00ff $bluebg
client.focused_inactive $light  $light #ffffff #484e50   #5f676a
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #00ff00 #0cff0c #ffffff #000000   #0c0c0c
