[colors]
background = #070a2e
background-alt = #444
foreground = #dfdfdf
module-background = #070a2e
module-foreground = #dfdfdf
module-foreground-subtle = #444
module-underline = #dfdfdf
module-prefix-foreground = #0a81f5
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
wm-restack = i3
width = 100%
fixed-center = true
bottom = false

locale = "en_GB.utf8"
background = #00000000
foreground = ${colors.foreground}

line-size = 1
line-color = #0a81f5

padding-left = 0
padding-right = 0

modul-margin-left = 0 
module-margin-right = 0

font-0 = Iosevka Term:size=9;3
font-1 = FontAwesome:size=9;3

modules-left = i3
modules-right = cpu temperature memory filesystem alsa xkeyboard 
modules-center = date

tray-position = right
tray-padding = 2
tray-foreground= #ffffff
tray-detached = true
tray-offset-x = -380;

cursor-click = pointer
cursor-scroll = ns-resize

[section/base]
format-background = ${colors.background}
content-background = ${colors.background}
format-prefix-foreground = ${colors.module-prefix-foreground}
format-padding = 1

[module/xkeyboard]
inherit = section/base
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = caps lock
label-layout = %{F#0a81f5}:%{F-}%layout%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted-background = ${colors.background}
label-mounted = %{F#0a81f5}%mountpoint:%:%{F-}%percentage_used%%
label-mounted-padding = 1;
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.module-prefix-foreground}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/cpu]
inherit = section/base
type = internal/cpu
interval = 2
format-prefix = ":"
label = %percentage:2%%

[module/memory]
inherit = section/base
type = internal/memory
interval = 2
format-prefix = ":"
label = %percentage_used%%

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

format-connected-prefix = "ETH:" format-connected-prefix-foreground = ${colors.module-prefix-foreground} label-connected = up format-disconnected = ;format-disconnected = <label-disconnected> ;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
inherit = section/base
type = internal/date
interval = 5.0
time=%H:%M
date = %d.%m.
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
format = <label>
label = %date% %time%

[module/alsa]
inherit = section/base
type = internal/alsa

format-volume = <label-volume>
label-volume = %percentage:2%%
label-muted = " 0%"
format-volume-prefix = :
format-muted-prefix = :
format-volume-prefix-foreground = ${colors.module-prefix-foreground}
format-muted-prefix-foreground = ${colors.module-prefix-foreground}
format-volume-background = ${colors.background}
format-muted-background = ${colors.background}
format-volume-padding = 1
format-muted-padding = 1

format-muted-foreground = ${colors.module-foreground-subtle}

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.module-foreground-subtle}


[module/temperature]
inherit = section/base
type = internal/temperature
thermal-zone = 2
warn-temperature = 60

format = <label>
format-warn-prefix = :
format-prefix = :
format-warn = <label-warn>
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

format-warn-background = ${colors.background}
content-background = ${colors.background}
format-prefix-foreground = ${colors.module-prefix-foreground}
format-warn-padding = 1


